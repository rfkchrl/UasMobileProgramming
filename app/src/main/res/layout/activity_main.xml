<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
        tools:context="arisyrifki.app.uasmobpro.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_list_hewan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorAbu"
            android:textAllCaps="false"
            android:text="Ini Untuk hewan "/>
        <Button
            android:id="@+id/btn_list_purba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorOrange"
            android:textAllCaps="false"
            android:text="Ini Untuk purba "/>
        <Button
            android:id="@+id/btn_list_funfact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            android:textAllCaps="false"
            android:text="Ini Untuk funfact "/>

    </LinearLayout>
</RelativeLayout>
